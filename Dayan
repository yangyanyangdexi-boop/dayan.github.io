    /* Perfect Heart ‚ù§Ô∏è */
    .heart-container {
      position: relative;
      width: 150px;
      height: 130px;
      background-color: red;
      clip-path: path("M75 130 L0 60 A37 37 0 0 1 75 25 A37 37 0 0 1 150 60 Z");
      animation: beat 1.5s infinite;
    }

    @keyframes beat {
      0%, 100% { transform: scale(1) rotate(0deg); }
      50% { transform: scale(1.2) rotate(0deg); }
    }

    /* Lightning Crack ‚ö° */
    .crack {
      position: absolute;
      width: 4px;
      height: 130px;
      background: linear-gradient(white, yellow, white);
      top: 0;
      left: 73px;
      opacity: 0;
      z-index: 2;
      box-shadow: 0 0 15px white;
      transform: skewX(-10deg);
    }

    .crack.show {
      animation: crackAnim 1s forwards;
