  <div id="page1">
    <h1>‰Ω†Â∑≤ÁªèÁà±‰∏äÂà´‰∫∫‰∫ÜÂêóÔºü(._.)</h1>
    <button id="yesBtn" class="btn">ÊòØ</button>
    <button id="noBtn" class="btn">Ê≤°</button>
  </div>

  <div id="page2" style="display:none;">
    <div class="heart-container" id="heart"></div>
    <div class="crack" id="crack"></div>
    <div class="broken-left" id="leftHalf"></div>
    <div class="broken-right" id="rightHalf"></div>
  </div>

  <div id="page3" style="display:none;">
    <h1 id="finalText">ÊàëÂ∞±Áü•ÈÅì„ÄÇ</h1>
  </div>

  <script>
    const noBtn = document.getElementById('noBtn');
    const yesBtn = document.getElementById('yesBtn');
    const page1 = document.getElementById('page1');
    const page2 = document.getElementById('page2');
    const page3 = document.getElementById('page3');
    const heart = document.getElementById('heart');
    const crack = document.getElementById('crack');
    const leftHalf = document.getElementById('leftHalf');
    const rightHalf = document.getElementById('rightHalf');
    const finalText = document.getElementById('finalText');

    // Move ‚ÄúÊ≤°‚Äù button
    function moveButton(button) {
      const x = Math.random() * (window.innerWidth - button.offsetWidth);
      const y = Math.random() * (window.innerHeight - button.offsetHeight);
      button.style.left = x + 'px';
      button.style.top = y + 'px';
    }

    noBtn.addEventListener('mouseover', () => moveButton(noBtn));
    noBtn.addEventListener('click', () => moveButton(noBtn));

    // When click ‚ÄúÊòØ‚Äù
    yesBtn.addEventListener('click', () => {
      page1.style.display = 'none';
      page2.style.display = 'flex';
      document.body.style.background = "#ff4d6d";

      // Step 1: Lightning crack
      setTimeout(() => {
        crack.classList.add('show');
      }, 800);

      // Step 2: Split heart
      setTimeout(() => {
        heart.style.display = 'none';
        leftHalf.classList.add('animate');
        rightHalf.classList.add('animate');
      }, 1800);

      // Step 3: Final message
      setTimeout(() => {
        page2.style.display = 'none';
        page3.style.display = 'flex';
        finalText.classList.add('fade-in');
        document.body.style.background = "pink";
      }, 3600);
    });
  </script>

</body>
